#!/bin/bash

input_bam=$1
ref=$2
output=$3
threads=$4

ref_folder=${ref%/*}
reference_name=${ref##*/}
reference_name=${reference_name%.*}

array=($(ls $ref_folder/$reference_name*))

reference_dict=${ref%.*}.dict

if [[  " ${array[*]} " =~ " ${reference_dict} " ]]; then
  echo 'Starting with processing'
else
  echo 'Generating reference genome dictionary'
  gatk CreateSequenceDictionary -R $reference
fi

mkdir $input_bam/tmp

for i in $input_bam/*bam;
do
  echo 'Starting variant call to ...'
  echo $i 
  
  
  ID=${i%_S*}
  ID=${ID##*/}
  prefix='one_mismatch.'
  ID=${ID/#$prefix}

  samtools sort -@ $threads $i -o $input_bam/${ID}_sorted.bam
  samtools calmd -@ $threads -b $input_bam/${ID}_sorted.bam $ref 1> $input_bam/${ID}_calmd.bam 2> /dev/null
  samtools index -@ $threads $input_bam/${ID}_calmd.bam

  revelio -t $input_bam/tmp --threads $threads -f $ref $input_bam/${ID}_calmd.bam $input_bam/${ID}_mask.bam
  
  samtools addreplacerg -r '@RG\tID:'${ID}'\tSM:'${ID} $input_bam/${ID}_mask.bam -o $input_bam/${ID}_mask.bam
  samtools index -@ $threads $input_bam/${ID}_mask.bam

  gatk HaplotypeCaller -R $ref --native-pair-hmm-threads $threads -I $input_bam/${ID}_mask.bam -O $output/${ID}_mask_haplotype2.vcf

done

echo 'Done'
