#!/bin/bash
input=$1
output=$2
echo '====================== counting vcf lines ======================'
echo 'ID,Count' >> ${output}/snv_count.csv
for i in $input/*.vcf;
do
  ID=${i%_mask*}; ID=${ID##*/};
  freq=$(cat $i | grep '#' -v | wc -l)
  echo ''${ID}','${freq}'' >> ${output}/snv_count.csv
done
cat ${output}/snv_count.csv | head -5 | sed 's/,/ /'
echo '========================= done snvcount ========================'
